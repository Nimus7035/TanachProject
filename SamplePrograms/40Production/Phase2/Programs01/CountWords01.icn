# This program counts the unique words in a file.
procedure main()
  hebLetters := 'ABGDHVZX+YKLMN$@PCQRST'
  file01 := open("Tanach_WLC.txt","r") | stop("Stop: Cannot open Tanach_WLC.txt!")
  wordcount := table(0)
  while lineIn := trim(read(file01)) do {
    write(lineIn)
    line := lineIn[19:0]
    write(line)
    line ? {
      while tab(upto(hebLetters)) do
        wordcount[tab(many(hebLetters))] +:= 1
    }
  }
  write("Unique wordcount = ",*wordcount)
  read()
end

