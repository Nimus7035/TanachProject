procedure main()
  file01 := open("Statistics.txt","a")
  file02 := open("00OrderedVerseCounts_LarryNelson.txt","r")
  verseCount :=0
  while (lineIn := read(file02)) do {
    lastVerse := lineIn[15:18]
    verseCount +:= lastVerse
    write(lineIn," ",lastVerse," ",verseCount)
  }
  write(file01,"JPS1917Tanach contains ",verseCount," verses (according to Larry Nelson).")
  read()
end
