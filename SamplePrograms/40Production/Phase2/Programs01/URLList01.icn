# This program reads a file list and creates a URL list.

procedure main()

  file01 := open("AllFiles.txt","r") | stop ("Can't open Allfiles.txt.")
  file02 := open("URLsM.txt","w") | stop ("Can't open URLsH.txt.")
  while lineIn := read(file01) do {
    fileName := lineIn[4:17]
    lineOut := "http://kodesh.snunit.k12.il/bible/" || fileName || "#1"
    write(file02,lineOut)
  }

end
