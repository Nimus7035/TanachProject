# This program uses Alpahbets.txt (a conversion table) to convert a Tanach to a common
# code set so it can be compared to another Tanach in the same code set.
procedure main()
# Initializations
  write("Begin File Conversion\n")
  (file01 := open("Alphabets.txt","r")) | stop("Cannot open Alphabets.txt\n")
  (file02 := open("Tanach2012.cod","u")) | stop("Cannot open Tanach2012.cod\n")
  (file03 := open("Tanach2012.txt","w")) | stop("Cannot open Tanach2012.txt\n")

  c1 := " "
  c2 := " "
  linein := " "

# Create the empty Alphabet Table
  alphabet := table(" ")

# Load the Alphabet Table.
  while line := read(file01) do
    { line ? {c1 := move(1)
                   move(1)
                   c2 := move(1) }
       alphabet[c1] := c2
    }

# Write the content of the alphabet table to the console.
every a := key(alphabet) do
  write(a, ":", alphabet[a])

# Convert file02 in it's own code set to file03 in the common code set.
  while c1 := reads(file02,1) do
    writes(file03,alphabet[c1])
end
